<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="24dp"
    android:layout_marginBottom="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_huong_dan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose the correct word to complete the sentence:"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tv_noi_dung_cau_hoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="She ____ to the store yesterday."
                android:textSize="20sp"
                android:textColor="#000000"
                android:padding="16dp"
                android:background="@drawable/rounded_question_bg"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:id="@+id/khung_chua_lua_chon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>