<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/thanh_dieu_huong" />

    <FrameLayout
        android:id="@+id/thanh_dieu_huong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:id="@+id/hop_chua_tdh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_home"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_nha"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_home"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_baihoc"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_baihoc"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_books"
                        app:tint="#4169E1" />

                    <View
                        android:id="@+id/dot_baihoc"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_tientrinh"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_tientrinh"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_progrs"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_tientrinh"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_hoso"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_hoso"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_nguoidung"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_hoso"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</RelativeLayout>