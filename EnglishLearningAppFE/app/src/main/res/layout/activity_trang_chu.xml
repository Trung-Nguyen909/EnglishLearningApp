<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_trangchu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/khung_tieu_de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/nen_icon_sach"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_xanhduong" />

                        <ImageView
                            android:id="@+id/img_icon_sach"
                            android:layout_width="34dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/img_ic_book"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_ten_ung_dung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="English App"
                        android:textColor="@color/royalBlue"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_nhapdulieu">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="Tìm kiếm..."
                    android:paddingStart="20dp"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_timkiem"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    app:tint="@color/royalBlue"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức độ hoạt động"
                android:textColor="@color/royalBlue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <FrameLayout
                        android:id="@+id/khung_chua_tien_do"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:id="@+id/progress_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:progress="72"
                            app:indicatorColor="@color/royalBlue"
                            app:indicatorSize="80dp"
                            app:trackColor="#E6EBF5"
                            app:trackCornerRadius="4dp"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/tv_phan_tram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0%"
                            android:textColor="@color/royalBlue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="210dp"
                        android:layout_height="90dp"
                        android:layout_alignBottom="@+id/khung_chua_tien_do"
                        android:layout_marginStart="23dp"
                        android:layout_marginBottom="-1dp"
                        android:layout_toEndOf="@id/khung_chua_tien_do"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_bai_hoc_gan_nhat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_khoa_hoc_gan_nhat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Đang tải..."
                            android:textColor="@color/royalBlue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hãy cố gắng và tiếp tục nào!" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_tiep_tuc_hoc"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@id/khung_chua_tien_do"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/shape_button_active_course"
                        android:text="Tiếp tục học"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài tập"
                android:textColor="@color/royalBlue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_kiem_tra_nhanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:overScrollMode="never" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuỗi ngày hoạt động"
                android:textColor="@color/royalBlue"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:mcv_showOtherDates="all"
                        app:mcv_selectionColor="@color/royalBlue"
                        app:mcv_headerTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:mcv_weekDayTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>