<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_trangchu"
    tools:context=".Activity.DangKyActivity">

    <!-- LinearLayout chứa Logo + Title + Welcome -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/layoutRegisterCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <!-- Logo và Title nằm ngang -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Logo và Icon -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_xanhduong" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="34dp"
                    android:layout_height="31dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/img_ic_book"
                    app:tint="@color/white" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="English App"
                android:textColor="@color/royalBlue"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Bắt đầu hành trình tiếng Anh của bạn"
            android:textAlignment="center"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- LinearLayout chính chứa toàn bộ form đăng ký -->
    <LinearLayout
        android:id="@+id/layoutRegisterCard"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_khungtrang"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <!-- Nút Đăng nhập / Đăng ký -->
        <LinearLayout
            android:id="@+id/layoutDangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDangNhap"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_khungtrang"
                android:text="Đăng nhập"
                android:textColor="@color/royalBlue"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnDangKy"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_xanhduong"
                android:text="Đăng ký"
                app:backgroundTint="@null" />
        </LinearLayout>

        <!-- Form nhập thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Email"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_nhapdulieu"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:paddingStart="8dp"
                android:textSize="14sp" />

            <!-- Username -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Tên đăng nhập"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_nhapdulieu"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="8dp"
                android:hint="Nhập tên đăng nhập"
                android:inputType="text"
                android:paddingStart="8dp"
                android:textSize="14sp" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Mật khẩu"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_nhapdulieu"
                android:drawableStart="@drawable/ic_matkhau"
                android:drawableEnd="@drawable/ic_matdong"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:textSize="14sp" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Xác nhận mật khẩu"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_nhapdulieu"
                android:drawableStart="@drawable/ic_matkhau"
                android:drawableEnd="@drawable/ic_matdong"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Nút Create Account -->

        <!-- Điều khoản -->
        <Button
            android:id="@+id/btnCreateAccount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_xanhduong"
            android:text="Tạo tài khoản"
            android:textSize="17dp"
            android:textColor="@color/white"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:autoLink="web"
            android:gravity="center"
            android:text="@string/terms_text"
            android:textAlignment="center"
            android:textColor="#8A8A8A"
            android:textSize="11sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>