<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cuon_noi_dung"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_trangchu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/khung_tieu_de"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_bo_goc_duoi"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingBottom="20dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="-20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textColor="#2563EB"
                android:textSize="22sp"
                android:textStyle="bold" />

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_bg_timer_blue"
                android:backgroundTint="#2563EB"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_ho_so_chinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <View
                android:id="@+id/nen_tieu_de"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/shape_background_splash"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/the_thong_tin_nguoi_dung"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:paddingTop="60dp"
                    android:paddingBottom="24dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp">

                    <TextView
                        android:id="@+id/tv_ten_nguoi_dung"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trần Minh Chiến"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_trinh_do"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trình độ cao cấp"
                        android:textSize="14sp"
                        android:textColor="#888" />

                    <TextView
                        android:id="@+id/tv_ngay_tham_gia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Là Thành viên từ 15/10/2024"
                        android:textSize="13sp"
                        android:textColor="#AAA"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btn_chinh_sua"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Chỉnh sửa thông tin"
                        android:backgroundTint="#2563EB"
                        app:cornerRadius="16dp"
                        android:textAllCaps="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/the_anh_dai_dien"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:layout_constraintTop_toTopOf="@id/the_thong_tin_nguoi_dung"
                app:layout_constraintBottom_toTopOf="@id/the_thong_tin_nguoi_dung"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/img_anh_dai_dien"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_nguoidung"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:id="@+id/luoi_thong_ke"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/the_thong_tin_nguoi_dung"
                app:layout_constraintStart_toStartOf="@id/the_thong_tin_nguoi_dung"
                app:layout_constraintEnd_toEndOf="@id/the_thong_tin_nguoi_dung">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#D1E5FE"
                    app:strokeWidth="1dp"
                    android:layout_margin="6dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_khungtrang">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:text="Chuỗi"
                                android:textSize="14sp"
                                android:textColor="#888"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@android:drawable/ic_menu_week"
                                app:tint="#2563EB"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_streak"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Ngày"
                            android:textSize="14sp"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#D1E5FE"
                    app:strokeWidth="1dp"
                    android:layout_margin="6dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_khungtrang">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:text="Thành Tựu"
                                android:textSize="14sp"
                                android:textColor="#888"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@android:drawable/star_big_off"
                                app:tint="#2563EB"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_achive"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Cái"
                            android:textSize="14sp"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#D1E5FE"
                    app:strokeWidth="1dp"
                    android:layout_margin="6dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_khungtrang">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:text="Bài học"
                                android:textSize="14sp"
                                android:textColor="#888"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="?attr/actionModePasteDrawable"
                                app:tint="#2563EB"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_lessons"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Bài học"
                            android:textSize="14sp"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:strokeColor="#D1E5FE"
                    app:strokeWidth="1dp"
                    android:layout_margin="6dp">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_khungtrang">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp">
                            <TextView
                                android:text="Thời gian"
                                android:textSize="14sp"
                                android:textColor="#888"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <ImageView
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#2563EB"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_width="24dp"
                                android:layout_height="24dp"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_time"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="28sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Giờ"
                            android:textSize="14sp"
                            android:textColor="#888"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/the_tien_trinh_hoc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/luoi_thong_ke"
                app:layout_constraintStart_toStartOf="@id/luoi_thong_ke"
                app:layout_constraintEnd_toEndOf="@id/luoi_thong_ke">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiến Trình Học"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:drawableStart="@drawable/ic_muitenphattrien"
                        app:drawableTint="#5F77C8"
                        android:drawablePadding="8dp"
                        android:layout_marginBottom="20dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nói"
                            android:textColor="#555"
                            android:textStyle="bold"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/tv_noi_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="#888"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/thanhnoi"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="10"
                        android:progress="0"
                        android:progressTint="#2563EB"
                        android:progressDrawable="@drawable/shape_custom_progress_bar"
                        android:layout_marginBottom="16dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Viết"
                            android:textStyle="bold"
                            android:textColor="#555"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/tv_viet_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="#888"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/thanhviet"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="10"
                        android:progressTint="#2563EB"
                        android:progress="0"
                        android:progressDrawable="@drawable/shape_custom_progress_bar"
                        android:layout_marginBottom="16dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nghe"
                            android:textStyle="bold"
                            android:textColor="#555"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/tv_nghe_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="#888"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/thanhnghe"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:max="10"
                        android:progressTint="#2563EB"
                        android:progress="0"
                        android:progressDrawable="@drawable/shape_custom_progress_bar"
                        android:layout_marginBottom="16dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đọc"
                            android:textStyle="bold"
                            android:textColor="#555"
                            android:layout_alignParentStart="true"/>
                        <TextView
                            android:id="@+id/tv_doc_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/10"
                            android:textColor="#888"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <ProgressBar
                        android:id="@+id/thanhdoc"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:progress="0"
                        android:max="10"
                        android:progressTint="#2563EB"
                        android:progressDrawable="@drawable/shape_custom_progress_bar"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/the_hoat_dong_gan_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/the_tien_trinh_hoc"
                app:layout_constraintStart_toStartOf="@id/the_tien_trinh_hoc"
                app:layout_constraintEnd_toEndOf="@id/the_tien_trinh_hoc">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hoạt động gần đây"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:layout_marginBottom="20dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">
                        <ImageView
                            android:id="@+id/img_icon_hoat_dong_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:padding="8dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            app:tint="#2563EB" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/img_icon_hoat_dong_1"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@+id/tv_diem_hoat_dong_1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hoàn thành 'Tiếng Anh cơ bản'"
                                android:textColor="@color/black" android:textSize="15sp"
                                android:textStyle="normal" /> <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 giờ trước"
                            android:textColor="#888888"
                            android:textSize="13sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_diem_hoat_dong_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+ 100"
                            android:textColor="#2563EB" android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/the_thanh_tuu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/the_hoat_dong_gan_day"
                app:layout_constraintStart_toStartOf="@id/the_hoat_dong_gan_day"
                app:layout_constraintEnd_toEndOf="@id/the_hoat_dong_gan_day">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành Tựu"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2563EB"
                        android:layout_marginBottom="20dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@android:drawable/ic_menu_agenda"
                                app:tint="#2563EB"
                                android:padding="14dp"
                                android:layout_marginBottom="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tuần đầu tiên"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textColor="#555"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_hoanthanh"
                                android:padding="14dp"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="100 Lessons Achievement"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100 bài học"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textColor="#555"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:src="@drawable/ic_bow"
                                android:padding="14dp"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="30-day Streak Achievement"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chuỗi 30 ngày"
                                android:textStyle="bold"
                                android:textSize="13sp"
                                android:textColor="#555"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cai_dat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cài Đặt"
                android:layout_marginTop="16dp"
                android:padding="12dp"
