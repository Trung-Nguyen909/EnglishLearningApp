<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F9FF">

    <FrameLayout
        android:id="@+id/bottom_menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_home"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_home"
                        app:tint="#4169E1" /> <View
                    android:id="@+id/dot_home"
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/shape_bg_bottom_nav_dot"
                    android:visibility="visible" /> </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_lessons"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_lessons"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_book"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_lessons"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_explore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_explore"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_progrs"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_explore"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_profile"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_person"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_profile"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_menu_container"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/layoutLoginForm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/view2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bg_book_icon" />

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="34dp"
                            android:layout_height="31dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/img_ic_book"
                            app:tint="@color/white" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="English App"
                        android:textColor="@color/royalBlue"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edittext"> <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="Tìm kiếm..."
                android:paddingStart="20dp"
                android:textSize="14sp" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_timkiem"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    app:tint="@color/royalBlue"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức độ hoạt động"
                android:textColor="@color/royalBlue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <RelativeLayout
                        android:id="@+id/layout_progress"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/shape_bg_circular_progress"> <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="72%"
                        android:textColor="@color/royalBlue"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/layout_progress"
                        android:layout_marginStart="21dp"
                        android:layout_marginBottom="9dp"
                        android:layout_toEndOf="@id/layout_progress"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chương 2"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Discovering English"
                            android:textColor="@color/royalBlue"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hãy cố gắng và tiếp tục nào!" />
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_below="@id/layout_progress"
                        android:layout_marginTop="20dp"
                        android:text="Tiếp tục học"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/shape_button_active_course"/> </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Test"
                android:textColor="#2D55FF"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_books"
                        android:padding="12dp"
                        android:background="@drawable/shape_button_active_course"
                        app:tint="#FFFFFF"/>
                    <TextView
                        android:text="Listening"
                        android:textColor="#2D55FF"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streak Calendar"
                android:textColor="#2D55FF"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_edittext"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>