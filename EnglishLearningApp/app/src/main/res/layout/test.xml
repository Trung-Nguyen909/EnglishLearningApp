<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <androidx.cardview.widget.CardView
        android:id="@+id/header_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="#4169E1"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Test"
                    android:textSize="20sp"
                    android:textColor="#4169E1"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#4169E1" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_card"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Difficulty Levels Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#D6F0F8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="32dp">

                    <!-- Basic Level -->
                    <LinearLayout
                        android:id="@+id/btn_basic"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#87CEEB">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="10"
                                android:textSize="28sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <!-- Medium Level -->
                    <LinearLayout
                        android:id="@+id/btn_medium"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#4169E1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="20"
                                android:textSize="28sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>

                    <!-- Advanced Level -->
                    <LinearLayout
                        android:id="@+id/btn_advanced"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackgroundBorderless">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:cardCornerRadius="35dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="#2849B8">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="30"
                                android:textSize="28sp"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:gravity="center" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Advanced"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Topic Selection Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chá»n chá»§ Ä‘á»(tÃ¹y chá»n)"
                        android:textSize="18sp"
                        android:textColor="#4169E1"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="@android:color/white">

                        <LinearLayout
                            android:id="@+id/dropdown_topics"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="All Topics"
                                android:textSize="16sp"
                                android:textColor="#4169E1" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrow_down"
                                app:tint="#4169E1" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:layout_marginBottom="20dp"
                        app:cardBackgroundColor="#4169E1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="20dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="ðŸ†"
                                android:textSize="32sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="Thi Ä‘áº¥u Ä‘á»ƒ giÃ nh top 1! Äiá»ƒm sá»‘ vÃ  thá»i gian lÃ m bÃ i cá»§a báº¡n sáº½ Ä‘Æ°á»£c ghi láº¡i trÃªn Báº£ng xáº¿p háº¡ng"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:lineSpacingExtra="4dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="ðŸŽ‰"
                                android:textSize="32sp"
                                android:gravity="center" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_start_test"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#4169E1"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Báº¯t Ä‘áº§u Test &amp; TÃ­nh giá»"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Thanh cÃ´ng cá»¥ -->
    <FrameLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#26D6ECFB"
        android:paddingTop="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:id="@+id/bottom_bar_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp">

                <LinearLayout
                    android:id="@+id/btn_home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_home"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_home"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_home"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_lessons"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_lessons"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_books"
                        app:tint="#4169E1" />

                    <View
                        android:id="@+id/dot_lessons"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_explore"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_explore"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_progrs"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_explore"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    tools:ignore="SpeakableTextPresentCheck">

                    <ImageView
                        android:id="@+id/icon_profile"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_person"
                        app:tint="#888888" />

                    <View
                        android:id="@+id/dot_profile"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape_bg_bottom_nav_dot"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>