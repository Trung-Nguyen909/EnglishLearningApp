<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_loai_bai_hoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Từ vựng"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_type_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_luu_bai"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/img_ic_book"
            android:contentDescription="Lưu bài học"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_tieu_de_bai_hoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Thành viên gia đình"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_luu_bai"
            app:layout_constraintTop_toBottomOf="@id/tv_loai_bai_hoc" />

        <ImageView
            android:id="@+id/img_icon_cap_do"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_bieudo"
            android:contentDescription="Cấp độ"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_tieu_de_bai_hoc" />

        <TextView
            android:id="@+id/tv_cap_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cơ bản"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/img_icon_cap_do"
            app:layout_constraintTop_toTopOf="@id/img_icon_cap_do"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_cap_do" />

        <ImageView
            android:id="@+id/img_icon_thoi_gian"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_dongho"
            android:contentDescription="Thời gian"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_cap_do"
            app:layout_constraintTop_toTopOf="@id/img_icon_cap_do" />

        <TextView
            android:id="@+id/tv_thoi_gian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10 phút"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@id/img_icon_thoi_gian"
            app:layout_constraintTop_toTopOf="@id/img_icon_thoi_gian"
            app:layout_constraintBottom_toBottomOf="@id/img_icon_thoi_gian" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>