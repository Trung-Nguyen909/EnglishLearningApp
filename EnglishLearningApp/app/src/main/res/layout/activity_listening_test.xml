<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listening"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F7FA"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_back"
            app:tint="#000000"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài kiểm tra"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/btn_back"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_bg_timer_blue"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_access_time_black_24dp"
                app:tint="#4169E1"
                android:layout_marginEnd="4dp"/>
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:02"
                android:textColor="#4169E1"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu 1/3"
            android:textColor="#555"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33%"
            android:textColor="#4169E1"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:progress="33"
        android:progressTint="#4169E1"
        android:backgroundTint="#E0E0E0"
        android:layout_marginBottom="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_dialogue_container"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_lock_silent_mode_off"
                                app:tint="#7B1FA2"
                                android:layout_marginEnd="8dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bài tập Nghe"
                                android:textColor="#7B1FA2"
                                android:textStyle="bold"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_play_audio"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Phát âm thanh"
                            android:background="@drawable/shape_bg_premium_tag"
                            android:textColor="@color/white"
                            android:drawableStart="@android:drawable/ic_media_play"
                            android:drawableTint="@color/white"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transcript: Man: Hey, are you ready to go? Woman: Yes! I'm so excited to visit the museum. Man: Me too! I heard they have a new exhibition."
                            android:textColor="#666"
                            android:textSize="13sp"
                            android:textStyle="italic"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Listen to the conversation and answer: Where are they going?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <RadioGroup
                        android:id="@+id/radio_group_answers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radio_option_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To the cinema"
                            android:textSize="15sp"
                            android:textColor="#333"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/option_default_bg"
                            android:buttonTint="#BDBDBD"
                            android:gravity="center_vertical"
                            android:layoutDirection="ltr"/>

                        <RadioButton
                            android:id="@+id/radio_option_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To the museum"
                            android:textSize="15sp"
                            android:textColor="#333"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/option_default_bg"
                            android:buttonTint="#BDBDBD"
                            android:gravity="center_vertical"/>

                        <RadioButton
                            android:id="@+id/radio_option_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To the park"
                            android:textSize="15sp"
                            android:textColor="#333"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp"
                            android:background="@drawable/option_default_bg"
                            android:buttonTint="#BDBDBD"
                            android:gravity="center_vertical"/>

                        <RadioButton
                            android:id="@+id/radio_option_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To the restaurant"
                            android:textSize="15sp"
                            android:textColor="#333"
                            android:padding="16dp"
                            android:background="@drawable/option_default_bg"
                            android:buttonTint="#BDBDBD"
                            android:gravity="center_vertical"/>

                    </RadioGroup>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Câu tiếp theo"
        android:background="@drawable/shape_bg_edittext_writing"
        android:backgroundTint="#E0E0E0"
        android:textColor="#888"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="16sp"/>

</LinearLayout>